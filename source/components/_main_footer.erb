<%#
  Main Footer component
  - lives at the bottom of each page

  Locals:
  BOOLEAN show_bio (optional): show the bio card? (only shown on interior pages, usually)

  Styles:
  components/card
  components/main_footer
%>

<% show_bio ||= false %>

<footer data-ui-main-footer class="padding-x-outside overflow-hidden" role="contentinfo">
  <% component 'wrapper' do %>
    <% unless show_bio == false %>
      <figure data-ui-card="multicolumn" class="gutter-wrapper margin-bottom-wide padding-bottom border-bottom">
        <div data-ui-card-figure="small" class="gutter t-centered">
          <div style="display: inline-block; max-width: 200px;">
            <%= image_tag "portrait.jpg", alt: data.site.title %>
          </div>
        </div>
        <figcaption data-ui-card-content class="gutter">
          <div class="t-body"><%= render_markdown(data.site.bio_blurb) %></div>
          <% component 'button_link', locals: {
            url: '/about',
            role: 'text',
            classes: 'margin-top-narrow'
          } do %>
            More about Jay &rsaquo;
          <% end %>
          <dl class="tag-group margin-top padding-top border-top border--secondary">
            <dt class="t-accent-bold t-caps t-scale-eta t-leading-tight margin-bottom-narrow">Say hi</dt>
            <div class="gutter-wrapper gutter-xxxnarrow">
              <% data.site.social.each do |site| %>
                <dd class="display-inline_block no-margin gutter"><%= link_to site.name, site.link, class: "t-tag" %></dd>
              <% end %>
            </div>
          </dl>
        </figcaption>
      </figure>
    <% end %>
    <div data-ui-main-footer-lockup>
      <%= component 'logo-jpw' %>
    </div>
    <small data-ui-main-footer-copyright>&copy; copyright <%= Time.now.year %> Jay Perry Works, all rights reserved.</small>
  <% end %>
</footer>
