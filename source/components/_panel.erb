<%#
  Panel component
  - For short content in scrolling sections. Meant to be full-width.

  Locals:
  - STRING heading (optional): a heading header for the top of the panel, e.g. "Recent work"
  - STRING theme (optional): name of color theme, e.g. "reverse" or "wash"
  - STRING classes (optional): additional modifier classes for the container
  - STRING id (optional): assign an id to help with anchor links

  Styles:
  core/borders
  core/color
  base/type
  layout/gutter
%>

<%
  theme ||= 'default'
  classes ||= ''
  id ||= false
  heading ||= false
  heading_level ||= 1
  borders ||= [ 'top' ]
  padding ||= {
    x: 'outside',
    y: 'xwide'
  }

  utils = [
    (padding_classes(padding) if padding),
    border_classes(borders),
    ("c-theme-#{theme}" if theme != 'default'),
    classes
  ]
%>

<section<%= class_list(utils) %><%= " id=#{id}" if id %>>
  <% if heading %>
    <h<%= heading_level %> class="t-centered padding-bottom-wide"><%= heading %></h<%= heading_level %>>
  <% end %>
  <%= yield %>
</section>
