<%#
  Panel component
  - For short content in scrolling sections. Meant to be full-width.

  Locals:
  - STRING heading (optional): a heading header for the top of the panel, e.g. "Recent work"
  - STRING theme (optional): name of color theme, e.g. "reverse" or "wash"
  - STRING classes (optional): additional modifier classes for the container
  - STRING id (optional): assign an id to help with anchor links
%>

<%
  theme ||= 'default'
  classes ||= ''
  id ||= false
  heading ||= false
  heading_level ||= 2
  heading_appearance ||= 'alpha'
  el ||= 'section'
  borders ||= [ 'top' ]
  padding ||= {
    x: 'outside',
    y: 'xwide'
  }

  utils = [
    (padding_classes(padding) if padding),
    border_classes(borders, 'border-seam'),
    classes
  ]
%>

<<%= el %> data-theme="<%= theme %>"<%= class_list(utils) %><%= " id=#{id}" if id %>>
  <% component 'wrapper', locals: {
    width: 'xxwide'
  } do %>
    <% if heading %>
      <h<%= heading_level %> class="padding-bottom-wide t-align-center@medium t-scale-<%= heading_appearance %>"><%= heading %></h<%= heading_level %>>
    <% end %>
    <%= yield %>
  <% end %>
</<%= el %>>
