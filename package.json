{
  "name": "jayperryworks-site",
  "version": "1.0.1",
  "description": "Jay Perry's website",
  "main": "index.html",
  "config": {
    "icons_src": "./source/assets/images/icons/**/*.svg",
    "icons_dest": "./source/layouts/partials/_spritemap.erb"
  },
  "scripts": {
    "start": "npm run watch",
    "watch": "webpack --config ./webpack_config/modern.config.js --watch -d",
    "build:modern": "webpack -p --config ./webpack_config/modern.config.js",
    "build:legacy": "webpack -p --config ./webpack_config/legacy.config.js",
    "build": "npm run build:modern && npm run build:legacy",
    "icons": "svgstore -o $npm_package_config_icons_dest --inline $npm_package_config_icons_src"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jayperryworks/jayperryworks-site.git"
  },
  "author": "Jay Perry Works",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jayperryworks/jayperryworks-site/issues"
  },
  "homepage": "https://jayperryworks.com",
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^2.0.2",
    "svgo": "^1.2.2",
    "svgstore-cli": "^1.3.1",
    "terser-webpack-plugin": "^1.3.0",
    "webpack": "^4.34.0",
    "webpack-cli": "^3.3.4",
    "webpack-manifest-plugin": "^2.0.4"
  },
  "dependencies": {
    "bourbon": "^5.1.0",
    "details-element-polyfill": "^2.3.1",
    "include-media": "*",
    "modularscale-sass": "^3.0.8",
    "normalize-css": "*"
  }
}
